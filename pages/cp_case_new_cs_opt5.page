                                </div>
                            </td>
                        </tr>
                    </table>
                    <div class="form_element" id="cus_emaildiv" name="Customer Email">
                        <!-- CSCustomerInfo[2] -->
                        <apex:outputlabel value="<span class=req id=cus_emailspan>*</span>Customer Email:" escape="false" />
